<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
<%= User.find(@post.user_id).username %>
</p>

<p>
  <b>Title:</b>
  <%= @post.title %>
</p>

<p>
  <b>Content:</b>
  <%= @post.content %>
</p>

<h2>Comments</h2>
<%= render :partial => "comments/comm",
		   :collection => @post.comments %>
<h2>Add a comment:</h2>
<%= render :partial => "comments/form" %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
